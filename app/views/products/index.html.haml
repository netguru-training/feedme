%h2 Food here

= search_form_for @search do |f|
  .col-md-6.field
    = f.label :name_cont, "Food"
    = f.text_field :name_cont
  .col-md-6.field
    = label_tag :location, "Location (10km radius)"
    = text_field_tag 'location', @search_tag_value
  = f.submit "Search", class: "btn btn-submit"
  = link_to 'Clear', root_path, class: "btn btn-warning"
%br
- if current_user && current_user.admin?
  .row
    .col-md-12
      = form_tag('/foods/fetch', method: 'get') do
        .col-md-2
          = select_tag 'restaurant', options_for_select([ 'Grzesznicy', 'Pyszne' ], 'Grzesznicy'), { :class => 'col-md-3 form-control' }
        = submit_tag 'Fetch food', class: 'btn btn-submit'

%br

%table.table.table-striped.table-hover#products
  %tr
    %th Product name
    %th Product price
    %th Product rate
    %th

  - @products.each do |product|
    %tr
      %td= link_to(product.name, product)
      %td.price= number_to_currency(product.price, :unit=>'z≈Ç ')
      %td= product.average_rating
      %td.buttons
        - if user_signed_in?
          = link_to "Add to order", product_order_items_path(product),
            method: :post, action: :create, class: "btn btn-primary"
          - if product.favourite(current_user.id)
            = link_to "Remove from favourites",  product_unfavourite_path(product),
              method: :post, action: :create, class: "btn btn-warning"
          - else
            = link_to "Add as favourite",  product_favourite_path(product),
              method: :post, action: :create, class: "btn btn-success"