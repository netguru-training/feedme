%h2 Food here

= search_form_for @search do |f|
  .col-md-6.field
    = f.label :name_cont, "Food"
    = f.text_field :name_cont
  .col-md-6.field
    = label_tag :location, "Location (10km radius)"
    = text_field_tag 'location', @search_tag_value
  = f.submit "Search", class: "btn btn-submit"
  = link_to 'Clear', root_path, class: "btn btn-warning"
%br
- if current_user && current_user.admin?
  .row
    .col-md-12
      = form_tag('/foods/fetch', method: 'get') do
        .col-md-2
          = select_tag 'restaurant', options_for_select([ 'Grzesznicy', 'Pyszne' ], 'Grzesznicy'), { :class => 'col-md-3 form-control' }
        = submit_tag 'Fetch food', class: 'btn btn-submit'

%br

= render 'table'


